<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity">

    <ImageView
        android:id="@+id/imageView16"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/fondo" />

    <View
        android:id="@+id/whiteBox"
        android:layout_width="415dp"
        android:layout_height="530dp"
        android:background="@drawable/cuadro_blanco_redondeado"
        app:layout_constraintBottom_toBottomOf="@+id/imageView16"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintWidth_percent="0.3" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="14dp"
        android:fontFamily="@font/news_cycle"
        android:text="TrendLink"
        android:textColor="#3A0CA3"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="352dp"
        android:layout_marginEnd="264dp"
        android:fontFamily="@font/news_cycle"
        android:text="Bienvenido"
        android:textColor="#3A0CA3"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="395dp"
        android:layout_marginEnd="210dp"
        android:fontFamily="@font/news_cycle"
        android:text="Ingresa tus credenciales"
        android:textColor="#3A0CA3"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:id="@+id/greyBox1"
        android:layout_width="295dp"
        android:layout_height="39dp"
        android:layout_marginTop="456dp"
        android:layout_marginEnd="76dp"
        android:background="@drawable/cuadro_gris_redondeado"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.3" />

    <View
        android:id="@+id/greyBox2"
        android:layout_width="295dp"
        android:layout_height="39dp"
        android:layout_marginTop="512dp"
        android:layout_marginEnd="76dp"
        android:background="@drawable/cuadro_gris_redondeado"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.3" />

    <TextView
        android:id="@+id/forgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="584dp"
        android:layout_marginEnd="196dp"
        android:fontFamily="@font/news_cycle"
        android:text="¿Olvidaste tu contraseña?"
        android:textColor="#3A0CA3"
        android:textSize="17sp"
        android:textStyle="bold"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/newAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="616dp"
        android:layout_marginEnd="252dp"
        android:fontFamily="@font/news_cycle"
        android:text="Crear una cuenta"
        android:textColor="#3A0CA3"
        android:textSize="17sp"
        android:textStyle="bold"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextUser"
        android:layout_width="271dp"
        android:layout_height="29dp"
        android:layout_marginTop="460dp"
        android:layout_marginEnd="85dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/news_cycle"
        android:hint="Ingresa tu email"
        android:textColorHint="#B0B0B0"
        android:inputType="textEmailAddress"
        android:textColor="#515151"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="271dp"
        android:layout_height="30dp"
        android:layout_marginTop="516dp"
        android:layout_marginEnd="85dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/news_cycle"
        android:hint="Ingresa tu contraseña"
        android:textColorHint="#B0B0B0"
        android:inputType="textPassword"
        android:textColor="#515151"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="216dp"
        android:layout_height="39dp"
        android:layout_marginTop="700dp"
        android:background="@drawable/cuadro_morado_redondeado"
        android:fontFamily="@font/news_cycle"
        android:text="Iniciar Sesión"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.3"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.3" />


</androidx.constraintlayout.widget.ConstraintLayout>