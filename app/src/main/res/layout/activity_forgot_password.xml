<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView16"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/fondo"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="26dp" />

    <View
        android:id="@+id/whiteBox"
        android:layout_width="419dp"
        android:layout_height="338dp"
        android:layout_marginTop="392dp"
        android:background="@drawable/cuadro_blanco_redondeado"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.3" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="14dp"
        android:fontFamily="@font/news_cycle"
        android:text="TrendLink"
        android:textColor="#3A0CA3"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="428dp"
        android:layout_marginEnd="232dp"
        android:fontFamily="@font/news_cycle"
        android:text="Recuperar cuenta"
        android:textColor="#3A0CA3"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="294dp"
        android:layout_height="53dp"
        android:layout_marginTop="480dp"
        android:layout_marginEnd="74dp"
        android:fontFamily="@font/news_cycle"
        android:text="Ingresa tu correo electronico para recuperar tu cuenta"
        android:textColor="#3A0CA3"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/greyBox1"
        android:layout_width="295dp"
        android:layout_height="39dp"
        android:layout_marginTop="556dp"
        android:layout_marginEnd="76dp"
        android:background="@drawable/cuadro_gris_redondeado"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.3" />

    <EditText
        android:id="@+id/email"
        android:layout_width="271dp"
        android:layout_height="29dp"
        android:layout_marginTop="560dp"
        android:layout_marginEnd="88dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/news_cycle"
        android:hint="Ingresa tu email"
        android:inputType="textEmailAddress"
        android:textColor="#515151"
        android:textColorHint="#B0B0B0"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/code"
        android:layout_width="216dp"
        android:layout_height="39dp"
        android:layout_marginTop="632dp"
        android:background="@drawable/cuadro_morado_redondeado"
        android:text="Enviar cÃ³digo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.3" />


</androidx.constraintlayout.widget.ConstraintLayout>