<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/cuadrogris"
        android:layout_width="345dp"
        android:layout_height="152dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.438"
        app:srcCompat="@drawable/cuadro_gris_redondeado" />

    <TextView
        android:id="@+id/textVerificacionEliminarPublicacion"
        android:layout_width="249dp"
        android:layout_height="67dp"
        android:fontFamily="@font/news_cycle"
        android:text="¿Estás seguro que deseas eliminar la publicación?"
        android:textColor="#828282"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.417" />

    <Button
        android:id="@+id/eliminarGrupo"
        android:layout_width="120dp"
        android:layout_height="38dp"
        android:backgroundTint="#9FB3ADAC"
        android:fontFamily="@font/news_cycle"
        android:text="Si, eliminar grupo"
        android:textAllCaps="false"
        android:textColor="#e3e4e5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.278"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.513" />

    <Button
        android:id="@+id/atras"
        android:layout_width="120dp"
        android:layout_height="38dp"
        android:backgroundTint="#9FB3ADAC"
        android:fontFamily="@font/news_cycle"
        android:text="No, volver"
        android:textAllCaps="false"
        android:textColor="#e3e4e5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.721"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.513" />

</androidx.constraintlayout.widget.ConstraintLayout>