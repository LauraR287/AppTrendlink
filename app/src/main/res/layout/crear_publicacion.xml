<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ENCABEZADO DE LA APP -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/news_cycle"
        android:layout_marginStart="14dp"
        android:layout_marginTop="10dp"
        android:text="TrendLink"
        android:textColor="#3A0CA3"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="14dp" />
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/separador_v2"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp" />

    <!-- BOTON ATRAS -->
    <LinearLayout
        android:id="@+id/BotonAtrasModificacionPerfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="14dp"
        tools:layout_editor_absoluteY="71dp">

        <ImageView
            android:id="@+id/buttonIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:src="@drawable/devolverse" />

        <TextView
            android:id="@+id/buttonText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Atrás"
            android:textColor="#F72585"
            android:textSize="15sp" />
    </LinearLayout>

    <!-- CUADRO DE DISEÑO -->
    <ImageView
        android:id="@+id/cuadroDeDiseño"
        android:layout_width="311dp"
        android:layout_height="284dp"
        android:layout_marginTop="84dp"
        android:layout_weight="1"
        android:src="@drawable/cuadro_de_disenio"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="50dp" />

    <!-- CUADRO DE DESCRIPCION -->

    <ImageView
        android:id="@+id/perfil3"
        android:layout_width="300dp"
        android:layout_height="256dp"
        android:layout_weight="1"
        android:scaleType="centerCrop"
        android:src="@drawable/dise_o1"
        tools:ignore="DuplicateIds,MissingConstraints"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="142dp" />

    <ImageView
        android:id="@+id/cuadroDeDescripcion"
        android:layout_width="312dp"
        android:layout_height="106dp"
        android:layout_marginTop="392dp"
        android:layout_weight="1"
        android:src="@drawable/cuadro_gris_redondeado"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="49dp" />

    <TextView
        android:id="@+id/descripcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/cuadroDeDescripcion"
        android:layout_centerHorizontal="true"
        android:text="Ingresa la descripción de la publicación"
        android:textColor="#828282"
        android:textSize="15sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="63dp"
        tools:layout_editor_absoluteY="449dp" />


    <!-- BOTON PUBLICAR -->
    <View
        android:layout_width="186dp"
        android:layout_height="37dp"
        android:layout_centerInParent="true"
        android:background="@drawable/cuadro_morado_redondeado"
        app:layout_constraintBottom_toBottomOf="@+id/textoBotonGuardar"
        app:layout_constraintEnd_toEndOf="@+id/textoBotonGuardar"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="@+id/textoBotonGuardar"
        app:layout_constraintTop_toTopOf="@+id/textoBotonGuardar"
        app:layout_constraintVertical_bias="0.47"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/textoBotonGuardar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Publicar diseño"
        android:textColor="#FFFF"
        android:textSize="15sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="592dp" />

</androidx.constraintlayout.widget.ConstraintLayout>